<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/InventoryManagementSystem.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #edf2f7; /* Light gray-blue background */
            margin: 0;
            padding: 0;
            color: #2d3748; /* Dark gray-blue text */
        }

        header {
            background-color: #4a5568; /* Muted dark gray-blue for header */
            color: #edf2f7; /* Light text for contrast */
        }

            header .navbar {
                padding: 0.5rem 1rem;
            }

            header .navbar-brand {
                font-weight: 700;
                font-size: 1.25rem;
                color: #AEA3B0;
            }

            header .nav-link {
                color: #edf2f7 !important;
                transition: color 0.3s;
            }

                header .nav-link:hover {
                    color: #63b3ed !important; /* Light blue on hover */
                }

            header .dropdown-menu {
                background-color: #4a5568; /* Match header background */
                border: none;
            }

            header .dropdown-item .nav-link {
                color: #edf2f7 !important;
            }

                header .dropdown-item .nav-link:hover {
                    background-color: #2c5282 !important; /* Deep blue hover */
                }

        .container {
            margin-top: 2rem;
        }

        main {
            padding: 1.5rem;
            background: #ffffff; /* White card background */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
            border-radius: 8px;
        }

        footer {
            background-color: #2d3748; /* Darker gray-blue for footer */
            color: #cbd5e0; /* Muted light text */
          
            text-align: center;
        }

            footer a {
                color: #63b3ed; /* Light blue links */
                text-decoration: none;
                transition: color 0.3s;
            }

                footer a:hover {
                    color: #edf2f7; /* Brighter text on hover */
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">IMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="PurchasesReport" asp-action="Index">Purchase</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="SalesReport" asp-action="Index">Sales</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="CurrentItemInfo" asp-action="Index">Current Item Stock</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ItemsHistory" asp-action="Index">Items History</a>
                            </li>
                            
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Content Management
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li class="dropdown-item">
                                            <a class="nav-link" asp-controller="Customer" asp-action="Index">Customer</a>
                                        </li>
                                        <li class="dropdown-item">
                                            <a class="nav-link" asp-controller="Item" asp-action="Index">Item</a>
                                        </li>
                                        <li class="dropdown-item">
                                            <a class="nav-link" asp-controller="Vendor" asp-action="Index">Vendor</a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" target="_blank" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="mt-4 footer text-muted">
        <div class="">
            &copy; 2024 - InventoryManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
